  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/bundle.js",
    "images/icon.svg",
    "snap.manifest.json"
  ],
  "scripts": {
    "start": "mm-snap watch",
