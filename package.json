    "bs58check": "^2.1.2",
    "buffer": "^6.0.3",
    "crypto-js": "^4.1.1",
    "light-bolt11-decoder": "^2.1.0",
    "secp256k1": "^5.0.0"
  },
  "devDependencies": {
